<h1>Book List</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Actions</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.author %></td>
      <td>
        <%= link_to 'Edit', edit_book_path(book) %> |
        <%= link_to 'View Borrowings', book_path(book)%>|
        <%= link_to 'Delete', book_path(book),data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
      </td>
    </tr>
  <% end %>
</table>
<%= link_to 'New Book', new_book_path,class: "btn btn-primary" %>
