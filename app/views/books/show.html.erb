<h1>Title:<%= @book.title %></h1>
<p><strong>Author:</strong> <%= @book.author %></p>

<h2>Borrowing History</h2>
<table>
  <thead>
    <tr>
      <th>Borrower</th>
      <th>Borrowed At</th>
      <th>Returned At</th>
    </tr>
  </thead>
  <tbody>
    <% @book.borrowings.each do |borrowing| %>
      <tr>
        <td><%= borrowing.borrower_name %></td>
        <td><%= borrowing.borrowed_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= borrowing.returned_at ? borrowing.returned_at.strftime("%Y-%m-%d %H:%M") : "Not Returned" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Borrow Book', new_borrowing_path, class: "btn btn-primary" %>
<%= link_to 'Back to Books', books_path, class: "btn btn-secondary" %>
